<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">


    <RelativeLayout

        android:id="@+id/left_part"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="26dp"

            android:layout_marginTop="30dp"
            android:src="@drawable/mahadi_1"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="20dp"

            android:text="Md. Mahadi hasan"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Student_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="30dp"
            android:text="17.01.04.102"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/dept1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Student_id1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="20dp"
            android:text="Department of CSE"
            android:textSize="14sp"
            android:textStyle="italic" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentRight="true"

        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/left_part">




        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"


            android:src="@drawable/ayon_1"
            app:civ_border_width="2dp"
            android:layout_centerHorizontal="true"
            app:civ_border_color="#ffffff"/>

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"

            android:layout_centerHorizontal="true"

            android:layout_marginTop="20dp"
            android:text="Ayon Mahmud"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Student_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name2"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="17.01.04.103"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/dept2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Student_id2"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Department of CSE"
            android:textSize="14sp"
            android:textStyle="italic" />


    </RelativeLayout>



        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"/>













</RelativeLayout>