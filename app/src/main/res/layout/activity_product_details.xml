<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProductDetailsActivity"
    android:background="@drawable/background2">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">




        <ImageView
            android:id="@+id/details_product_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:scaleType="centerCrop"
            android:src="@drawable/profile_background" />

        <TextView
            android:id="@+id/details_Product_name"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_product_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="serif"
            android:text="Product Name"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/details_Product_price"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_Product_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="serif"
            android:text="Price"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/details_product_image"
            android:layout_alignTop="@+id/details_Product_name"
            android:fontFamily="serif"
            android:text="Date"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/details_Product_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_Product_price"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="serif"
            android:text="Details"
            android:textSize="18dp" />


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/details_seller_user_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"


            android:layout_below="@+id/details_Product_details"

            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/details_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_seller_user_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="serif"
            android:text="Seller Name"
            android:textSize="18dp" />

        <ImageView
        android:id="@+id/details_message_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/msgicon"
        android:layout_below="@id/details_seller_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


        <ImageView
            android:id="@+id/addtowishlist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/details_product_image"

            android:layout_alignTop="@+id/details_product_image"
            android:src="@drawable/add" />



















    </RelativeLayout>



</android.support.v4.widget.NestedScrollView>