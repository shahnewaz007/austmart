<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"


    tools:context=".activities.LoginActivity"
    tools:ignore="NestedWeights">


    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="187dp"
        android:layout_height="104dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:contentDescription="@string/registrationLogo"
        app:srcCompat="@drawable/logo" />




    <ImageView
        android:id="@+id/login_avatar"
        android:layout_width="138dp"
        android:layout_height="149dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"


        app:srcCompat="@drawable/avatar" />



    <EditText
        android:id="@+id/login_mail"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/reg_editext_style"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />



    <EditText
        android:id="@+id/login_password"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_mail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/reg_editext_style"

        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/button_login"

        android:layout_width="203dp"
        android:layout_height="44dp"
        android:layout_below="@id/login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/reg_btn_style"
        android:text="Login"
        android:textColor="#fff" />


    <ProgressBar
        android:id="@+id/login_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_login"
        android:layout_centerHorizontal="true" />








</RelativeLayout>